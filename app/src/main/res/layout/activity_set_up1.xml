<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 如果要想改变样式文件中的某个属性的值，直接在控件中重写相应的属性，设置值，设置的值就会将样式文件中的值覆盖 -->
    <TextView
        style="@style/ActivityTitle"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="1.欢迎使用手机防盗" />

    <TextView
        style="@style/SetUpContenttitle"
        android:text="您的手机防盗卫士:" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="SIM卡变更报警" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="GPS追踪" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="远程锁屏" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="远程销毁数据" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- layout_centerInParent : 设置控件到父控件中间位置 -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/step_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">
            <!--  @android:drawable/presence_online : 使用系统的图片-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_online" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/presence_invisible" />
        </LinearLayout>

        <Button style="@style/next" />
    </RelativeLayout>


</LinearLayout>