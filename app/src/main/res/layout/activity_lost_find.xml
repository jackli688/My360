<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/ActivityTitle"
        android:text="手机防盗" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lostfind_tv_safenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="5556"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#99000000" />

    <RelativeLayout
        android:id="@+id/lostfind_rel_protected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_lostfind_item_bg"
        android:clickable="true"
        android:padding="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="防盗保护是否开始"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/lostfind_tv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/unlock" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#99000000" />

    <TextView
        android:id="@+id/lostfind_tv_agin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_lostfind_item_bg"
        android:padding="12dp"
        android:text="重新进入设置向导"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:padding="8dp"
        android:text="功能介绍"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="GPS追踪:#*location*#" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="远程销毁数据:#*wipedata*#" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="播放报警音乐:#*alarm*#" />

    <TextView
        style="@style/SetUpContentStyle"
        android:text="远程锁屏:#*lockscreen*#" />

</LinearLayout>